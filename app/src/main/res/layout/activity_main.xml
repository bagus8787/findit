<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ui_decorplant"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/img_1"
                android:layout_width="83dp"
                android:layout_height="77dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="46dp"
                android:layout_marginLeft="47dp"
                android:layout_marginTop="41dp"
                android:onClick="plant1"
                app:srcCompat="@drawable/decor_plant" />

            <TextView
                android:id="@+id/plan1"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_1"
                android:layout_alignStart="@+id/img_1"
                android:layout_alignLeft="@+id/img_1"
                android:layout_alignEnd="@+id/img_1"
                android:layout_alignRight="@+id/img_1"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:text="Plan 1"
                android:gravity="center"
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/img_2"
                android:layout_width="83dp"
                android:layout_height="77dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="27dp"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="41dp"
                android:layout_toEndOf="@+id/img_1"
                android:layout_toRightOf="@+id/img_1"
                app:srcCompat="@drawable/decor_plant" />

            <TextView
                android:id="@+id/plan2"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_2"
                android:layout_alignStart="@+id/img_2"
                android:layout_alignLeft="@+id/img_2"
                android:layout_alignEnd="@+id/img_2"
                android:layout_alignRight="@+id/img_2"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:gravity="center"
                android:text="Plan 2"
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/img_3"
                android:layout_width="83dp"
                android:layout_height="77dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="26dp"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="41dp"
                android:layout_marginEnd="48dp"
                android:layout_marginRight="48dp"
                android:layout_toEndOf="@+id/img_2"
                android:layout_toRightOf="@+id/img_2"
                app:srcCompat="@drawable/decor_plant" />

            <TextView
                android:id="@+id/plan3"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_3"
                android:layout_alignStart="@+id/img_3"
                android:layout_alignLeft="@+id/img_3"
                android:layout_alignEnd="@+id/img_3"
                android:layout_alignRight="@+id/img_3"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="3dp"
                android:layout_marginRight="3dp"
                android:text="Plan 3"
                android:gravity="center"
                android:textColor="#000000" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>